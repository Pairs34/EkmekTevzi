unit uCustomDialog;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TfrmCustomDialog = class(TForm)
    lblCaption: TLabel;
    formCloser: TTimer;
    procedure formCloserTimer(Sender: TObject);
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmCustomDialog: TfrmCustomDialog;

implementation

{$R *.dfm}

procedure TfrmCustomDialog.formCloserTimer(Sender: TObject);
begin
    Self.CloseModal;
end;

procedure TfrmCustomDialog.FormShow(Sender: TObject);
begin
  formCloser.Enabled := true;
end;

end.
